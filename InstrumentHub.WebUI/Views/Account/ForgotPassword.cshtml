@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    body {
        background: linear-gradient(90deg, #FFE5B4, #FFD89C);
        font-family: 'Poppins', sans-serif;
        color: #5A3E2B;
    }

    .container-password {
        background: #FFF6E9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #D77A30;
    }

    .form-group {
        text-align: left;
    }

    label {
        font-size: 14px;
        font-weight: bold;
        color: #8B5E3C;
    }

    input.form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #E8C29E;
        outline: none;
        background: #FFFAF0;
        transition: 0.3s ease;
    }

        input.form-control:focus {
            border-color: #D77A30;
            background: #FFF2E0;
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        background: #D77A30;
        border: none;
        font-size: 16px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: #C96A28;
        }
</style>


<div class="text-center">
    <h1>Forgot Password</h1>
    <div class="row d-flex justify-content-center">
        <div class="col-md-3">
            <form asp-action="ForgotPassword" asp-controller="Account">
                <div class="form-group mb-2">
                    <label class="form-label">Email</label>
                    <input name="Email" class="form-control" type="text" />
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Forgot Password" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
