@using Instrument.WebUI.Models
@using InstrumentHub.Entites
@model EProductListModel

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<link href="~/css/index.css" rel="stylesheet" />

<style>
    .filter-form {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .filter-form label {
            font-weight: bold;
            color: #333;
        }

        .filter-form input {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            outline: none;
            transition: all 0.3s ease-in-out;
        }

            .filter-form input:focus {
                border-color: #ff8c00;
                box-shadow: 0 0 5px rgba(255, 140, 0, 0.5);
            }

        .filter-form button {
            background-color: #ff8c00;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s;
        }

            .filter-form button:hover {
                background-color: #e07b00;
            }

    footer {
        background-color: #222;
        color: white;
        padding: 20px;
        text-align: center;
        margin-top: 20px;
        width: 100%;
        position: relative;
        left: 0;
    }

    .footer-container {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    .footer-section {
        flex: 1;
        min-width: 250px;
        padding: 10px;
    }

        .footer-section h4 {
            margin-bottom: 10px;
            font-size: 18px;
            color: #ff8c00;
        }

        .footer-section ul {
            list-style: none;
            padding: 0;
        }

            .footer-section ul li {
                margin: 5px 0;
            }

                .footer-section ul li a {
                    color: white;
                    text-decoration: none;
                    transition: color 0.3s;
                }

                    .footer-section ul li a:hover {
                        color: #ff8c00;
                    }

    .social-icons a {
        color: white;
        font-size: 20px;
        margin: 0 10px;
        transition: color 0.3s;
    }

        .social-icons a:hover {
            color: #ff8c00;
        }

    .footer-bottom {
        margin-top: 15px;
        font-size: 14px;
        border-top: 1px solid #444;
        padding-top: 10px;
    }
</style>

<div class="row d-flex justify-content-center">
    <div>
        @await Component.InvokeAsync("CategoryList")
    </div>

    <div class="filter-form">
        <form method="get" action="@Url.Action("FilterByPrice", "Home")">
            <label for="minPrice">Min Fiyat:</label>
            <input type="number" id="minPrice" name="minPrice" placeholder="Min ₺" required />
            <label for="maxPrice">Maks Fiyat:</label>
            <input type="number" id="maxPrice" name="maxPrice" placeholder="Max ₺" required />
            <button type="submit"><i class="fas fa-filter"></i> Filtrele</button>
        </form>
    </div>

    <h1 style="text-align:center; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;color:orange;">Welcome To InstrumentHub</h1>

    <div class="row mt-5">
        <div>
            <div class="row">
                @if (Model.EProducts != null && Model.EProducts.Count > 0)
                {
                    @foreach (EProduct product in Model.EProducts)
                    {
                        <partial name="_products" for="@product" />
                    }
                }
                else
                {
                    <p>Ürün Bulunamadı.</p>
                }
            </div>
        </div>
    </div>
</div>

<footer>
    <div class="footer-container">
        <div class="footer-section">
            <h4>InstrumentHub</h4>
            <p>En kaliteli enstrümanları burada bulabilirsiniz.</p>
        </div>
        <div class="footer-section">
            <h4>Bağlantılar</h4>
            <ul>
                <li><a href="#">Hakkımızda</a></li>
                <li><a href="#">İletişim</a></li>
                <li><a href="#">SSS</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h4>Bizi Takip Edin</h4>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>
    <p class="footer-bottom">&copy; @DateTime.Now.Year InstrumentHub | Tüm hakları saklıdır.</p>
</footer>
