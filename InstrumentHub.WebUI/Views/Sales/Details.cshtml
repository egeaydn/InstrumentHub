@using Instrument.WebUI.Models
@using System.Web
@model EProductDetailModel
@{
    ViewData["title"] = "Eproduct Detail";
}

<link href="~/css/productDetails.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: #212529;
    }

    .product-detail {
        margin: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        padding: 20px;
    }

    .top-image {
        width: 100%;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease-in-out;
    }

        .top-image:hover {
            transform: scale(1.07);
        }

    .thumb-image {
        width: 100%;
        border-radius: 8px;
        cursor: pointer;
        box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out;
    }

        .thumb-image:hover {
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
            transform: scale(1.15);
        }

    .product-detail h1 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    .text-primary {
        font-size: 1.6rem;
        color: #ff6600;
        font-weight: bold;
    }

    a.btn-link {
        font-size: 1rem;
        color: #ff6600;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
    }

        a.btn-link:hover {
            text-decoration: underline;
            color: #cc5200;
        }

    .cart-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    input.quantity {
        width: 60px;
        padding: 8px;
        text-align: center;
        border: 1px solid #ced4da;
        border-radius: 8px;
    }

    button.btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 18px;
        font-size: 1rem;
        border-radius: 25px;
        background-color: #ff6600;
        color: #fff;
        transition: background-color 0.3s ease-in-out, box-shadow 0.2s ease-in-out;
        border: none;
    }

        button.btn:hover {
            background-color: #cc5200;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

    .nav-tabs {
        border-bottom: 2px solid #dee2e6;
        margin-bottom: 20px;
    }

    .tab-on{
		font-size:15p;
        font-weight:700;
		color: #495057;
		border: none;
		border-radius: 8px;
		margin-right: 10px;
		padding: 12px 18px;
		transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    }

        .tab-on-des{

        }

        .nav-tabs .nav-link {
            font-size: 1rem;
            color: #495057;
            border: none;
            border-radius: 8px;
            margin-right: 10px;
            padding: 12px 18px;
            transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        }

            .nav-tabs .nav-link.active {
                background-color: #ff6600;
                color: #fff;
            }

            .nav-tabs .nav-link:hover {
                background-color: #cc5200;
                color: #fff;
            }

    .tab-content {
        padding: 25px;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }



    .related-products .card {
        margin: 15px 10px;
        border-radius: 12px;
        box-shadow: 0 5px 8px rgba(0, 0, 0, 0.1);
    }

    .related-products .card-img-top {
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
    }

    .product-card {
        border: 1px solid #f0f0f0;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
        }

    .card-img-wrapper {
        position: relative;
        height: 220px;
        overflow: hidden;
    }

        .card-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .card-img-wrapper:hover img {
            transform: scale(1.1);
        }

    .product-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
    }

    .product-brand {
        font-size: 1rem;
        color: #757575;
        margin: 6px 0;
    }

    .product-price {
        font-size: 1.3rem;
        font-weight: bold;
        color: #ff6600;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px;
        background-color: #fafafa;
        border-radius: 0 0 10px 10px;
    }

        .card-footer .btn {
            font-size: 1rem;
            padding: 8px 14px;
            border-radius: 8px;
        }

        .card-footer .btn-outline-primary {
            border-color: #ff6600;
            color: #ff6600;
            transition: background-color 0.3s, color 0.3s;
        }

            .card-footer .btn-outline-primary:hover {
                background-color: #ff6600;
                color: #fff;
            }

    .product-card {
        width: 77%;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 0px;
        position: relative;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    .card-img-wrapper {
        position: relative;
        height: 250px;
        overflow: hidden;
        border-bottom: 1px solid #f0f0f0;
    }

        .card-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }


    .product-title {
        font-size: 16px;
        font-weight: bold;
        margin: 10px 0;
        color: black;
        font-weight: bold;
    }

    .product-description {
        font-size: 14px;
        color: #757575;
        margin-bottom: 10px;
        max-height: 40px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .product-brand {
        font-size: 0.85rem;
        color: #777;
        margin-bottom: 8px;
    }

    .product-price {
        font-size: 18px;
        color: #ff4500;
        font-weight: bold;
        margin: 5px 0;
    }

    .card-footer {
        padding: 5px;
        background: #fafafa;
        border-top: 1px solid #e0e0e0;
        display: flex;
        justify-content: center;
    }

    .add-to-cart {
        font-size: 14px;
        font-weight: bold;
        background: orange;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        transition: 0.3s;
        width: 100%;
        cursor: pointer;
    }

    .btn-buynow{
        font-size: 14px;
        font-weight: bold;
        background: green;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 23px;
        transition: 0.3s;
        margin-top:10px;
        width: 43%;
        height: 47px;
        cursor: pointer;
        font-family: 'Arial', sans-serif;
    }

        .add-to-cart:hover {
            background: darkorange;
            transform: scale(1.05);
        }

        .btn-buynow:hover {
            background: darkgreen;
            transform: scale(1.05);
        }
    .badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: orange;
        color: white;
        padding: 5px 10px;
        font-size: 12px;
        border-radius: 5px;
        font-weight: bold;
    }

    .rating {
        color: gold;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .sold-count {
        font-size: 0.85rem;
        color: #ffff;
        margin-bottom: 0px;
        background-color: orangered;
        -webkit-border-top-left-radius: 20px;
        -webkit-border-top-right-radius: 20px;
        -moz-border-radius-topleft: 20px;
        -moz-border-radius-topright: 20px;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
    } 
</style>

<div class="row product-detail">
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12 mb-3">
                @{
                    var image = Model.EProduct.Images.Find(img => img.EProductId == Model.EProduct.Id);
                }
                @if (image != null)
                {
                    <img src="~/img/@image.ImageUrl" class="img-fluid top-image" id="image-box" />
                }
                else
                {
                    <img src="~/img/placeholder.jpg" class="img-fluid top-image" id="image-box" />
                }
            </div>
        </div>
        <div class="row">
            @foreach (var img in Model.EProduct.Images)
            {
                <div class="col-md-3 mb-3">
                    <img src="~/img/@img.ImageUrl" class="img-fluid thumb-image" onclick="imageBox(this)" />
                </div>
            }
        </div>
    </div>

    <div class="col-md-9">
        <h1 class="product-title mb-3">@Model.EProduct.Name</h1>
        <hr />
        <br />
        @foreach (var category in Model.Divisions)
        {
            <a href="#" class="btn btn-link category-link">@category.CategoryName</a>
        }
        <div class="product-price-section mb-3">
            <h4 class="text-warning mb-3 fw-bold">@Model.EProduct.Price TL</h4>
            <p class="tab-on">@Model.EProduct.Brand</p>
            <p>Avarage Point: @ViewBag.AverageRating / 5</p>
            <p class="tab-on"> @Html.Raw(Model.EProduct.Description)</p>
            @if (!User.IsInRole("admin") && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Basket" asp-action="AddToBasket" method="POST">
                    <input type="hidden" name="productId" value="@Model.EProduct.Id" />
                    <input type="hidden" name="quantity" value="1" />

                    <div class="input-group cart-group">
                        <button type="submit" name="action" value="addToCart" class="btn btn-outline-primary btn-md add-to-cart-btn">
                            <i class="fas fa-cart-plus"></i> Add To Cart
                        </button>
                    </div>

                    <div class="input-group cart-group ">
                        <button type="submit" name="action" value="buyNow" class=" btn-md btn-buynow">
                            <i class="fa-solid fa-basket-shopping"></i> Şimdi Al
                        </button>
                    </div>
                </form>
            }

        </div>
    </div>
</div>

<div class="row">
    <ul class="nav nav-tabs mt-2 product-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Description</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="comments-tab" data-bs-toggle="tab" data-bs-target="#comment" type="button" role="tab" aria-controls="comment" aria-selected="false">Comments</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active product-description" id="description" role="tabpanel" aria-labelledby="description-tab">
            @Html.Raw(Model.EProduct.Description)
        </div>
        <div class="tab-pane fade product-comments" id="comment" role="tabpanel" aria-labelledby="comments-tab"
             data-product-id="@Model.EProduct.Id"
             data-url="@Url.Action(action: "ShowComment", controller: "Comment", new { id = Model.EProduct.Id })">
            <partial name="_PartialComments" for="@Model.Comments" />
        </div>
    </div>
</div>

<div class="row related-products">
    <h3>Similar Products</h3>
    <div class="row">
        @foreach (var product in Model.RelatedProducts)
        {
            <div class="col-md-4 col-lg-3 mt-3">
                <div class=" product-card ">
                    <a asp-controller="Sales" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                        <div class="card-img-wrapper">
                            <img src="~/img/@(product.Images.FirstOrDefault()?.ImageUrl ?? "placeholder.jpg")"
                                 class="card-img-top"
                                 alt="@product.Name">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="product-title ">@product.Name</h5>
                            @{
                                var plainText = HttpUtility.HtmlDecode(System.Text.RegularExpressions.Regex.Replace(Model.EProduct.Description, "<.*?>", ""));
                            }
                            <p class="product-description">@plainText</p>
                            <p class="product-brand">@product.Brand</p>

                            <div class="product-price">
                                <span>@product.Price ₺</span>
                            </div>
                            <div class="rating">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                        </div>
                    </a>
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("admin"))
                    {
                        <form asp-controller="Basket" asp-action="AddToBasket" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="add-to-cart">
                                <i class="fas fa-shopping-cart"></i> Sepete Ekle
                            </button>
                        </form>
                    }
                    </div>
                </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/Comment.js"></script>
}

<script>
    function doComment(btn, action, commentId, textInputId) {
        let commentText = document.getElementById("new_comment_text").value.trim();
        let ratingValue = document.getElementById("new_comment_rating").value; // ⭐ Seçilen rating'i al

        if (commentText === "") {
            alert("Lütfen bir yorum girin.");
            return;
        }

        $.ajax({
            url: "/Comment/Create",
            type: "POST",
            data: {
                Text: commentText,
                Rating: ratingValue,  // ⭐ Backend'e rating gönder
                productId: @Model.EProduct.Id  // Eğer varsa ürüne ait ID gönder
            },
            success: function (response) {
                if (response.result) {
                    location.reload();  // Yorum eklendiğinde sayfayı yenile
                }
            }
        });
    }
</script>
