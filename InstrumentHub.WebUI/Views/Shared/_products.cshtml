@using InstrumentHub.Entites
@model EProduct

<div class="col-md-3 mt-3">
    <div class="card shadow-sm border-0">
        @{
            var image = Model.Images.Find(img => img.EProductId == Model.Id);
        }

        <img src="~/img/@(image != null ? image.ImageUrl : "placeholder.jpg")" class="card-img-top rounded" style="height: 200px; object-fit: cover;" />

        <div class="card-body text-center">
            <h5 class="card-title">
                <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                    @Model.Name
                </a>
            </h5>
            <div class="price-box d-flex justify-content-between">
                <span class="text-muted price">@Model.Price ₺</span>
                <span class="text-muted">@Model.Brand</span>
            </div>
        </div>
        <div class="card-footer text-center bg-light">
            <a class="btn btn-primary btn-sm" asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id">
                <i class="bi bi-info-circle"></i> Details
            </a>
            @if (User.Identity.IsAuthenticated && !User.IsInRole("admin"))
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="POST" style="display:inline">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-success btn-sm ms-3">
                        <i class="bi bi-cart-plus"></i> Add To Cart
                    </button>
                </form>
            }
        </div>
    </div>
</div>
