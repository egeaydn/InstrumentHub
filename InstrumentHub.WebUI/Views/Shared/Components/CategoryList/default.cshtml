@using Instrument.WebUI.Models
@model DivisionListViewModel

<ul class="list-group ">
    <a href="/products/all">
        <li class="list-group-item list-group-item-action">
            <strong>All Products</strong>
        </li>
    </a>
    @foreach (var category in Model.Divisions)
    {
       <a asp-controller="Shop" asp-action="List" asp-route-category="@category.CategoryName.ToLower()"
       class="list-group-item list-group-item-action @(Model.SelectDivision == category.CategoryName.ToLower() ? "active" : "")">
   
        @category.CategoryName
        </a>
    }
</ul>