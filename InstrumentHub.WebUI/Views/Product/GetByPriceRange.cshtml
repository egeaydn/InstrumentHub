@using Instrument.WebUI.Models
@model EProductListModel

<h2>Fiyat Aralığına Göre Ürünler</h2>
<p>@(Model?.EProducts?.Count ?? 0) ürün bulundu.</p>

<table>
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Marka</th>
    </tr>
    @foreach (var product in Model.EProducts)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price ₺</td>
            <td>@product.Brand</td>
        </tr>
    }
</table>
